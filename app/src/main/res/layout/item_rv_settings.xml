<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:gravity="center|start"
    android:orientation="horizontal"
    android:padding="1dp">

    <io.isning.installer.wear.view.BurnRoundView
        android:id="@+id/settings_item_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:burnColor="@color/colorAccent"
        app:burnSrc="@drawable/ic_settings"
        tools:ignore="PrivateResource" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/settings_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorText"
            android:textSize="16sp"
            tools:text="Title" />

        <TextView
            android:id="@+id/settings_item_sub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorTextSub"
            android:textSize="14sp"
            tools:text="Sub" />

    </LinearLayout>

    <io.isning.installer.wear.view.SwitchButton
        android:id="@+id/settings_item_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>